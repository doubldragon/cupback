{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="col-md-6 col-lg-4" style="margin:0 auto;">
            <form action="/submitOrder" method="POST">
                <input type="text" class="form-control mt-3" id="name" name="name" placeholder="Name">
                <input type="text" class="form-control mt-3" id="address" placeholder="Street Address">
                <input type="text" class="form-control mt-3" placeholder="City">
                <input type="text" class="form-control mt-3" placeholder="State">
                <input type="text" class="form-control mt-3" placeholder="Zip">
                <input type="text" class="form-control mt-3" placeholder="Email">
                <label class="form-check-label mt-3">
                    <input type="checkbox" id="isLocal" class="form-check-input" onChange="updateTotal()">
                    Local Pickup
                </label><br>
                <label for="exampleSelect1" class="mt-3">Bags of coffee</label>
                <select class="form-control" id="numBags" onClick="updateTotal()">
                    {% for i in 1..10  %}

                          <option value="{{ i }}">{{ i }}</option>;                            }

                    {% endfor %}
                </select>
                <textarea class="form-control mt-3 mb-3" placeholder="Comments..." id="comments"></textarea>
                <p id="output"></p>
                <input type="hidden" value="600" id="ship">
                <script>

                    function updateTotal()
                    {
                        isLocal = document.getElementById("isLocal").checked;
                        numBags = document.getElementById("numBags").value;
                        total = numBags * 1200;
                        if (!isLocal){
                            total += 600;
                        }
                        output.innerHTML = "Your Total is: $" + (total/100).toFixed(2);
                    }

                </script>

                <script

                        src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-key="pk_test_6pRNASCoBOKtIshFeQd4XMUh"
                        data-amount="1800"
                        data-name="Stripe.com"
                        data-description="Widget"
                        data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
                        data-locale="auto"
                        data-zip-code="true">
                </script>
            </form>
        </div>
    </div>
{% endblock %}